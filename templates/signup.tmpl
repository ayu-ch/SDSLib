{{template "base" .}}

{{define "body"}}

    <main class="min-h-screen flex flex-col items-center justify-center bg-[#a8dadc] space-y-10 py-12 px-4 sm:px-6 lg:px-8">
      <div class="max-w-md w-full mx-auto bg-[#f1faee] shadow rounded-lg p-7 space-y-6">
        <h1 class="mt-6 text-center text-4xl font-extrabold text-[#e63946]">Sign Up</h1>
        <form method="post">
          <label class="text-sm font-bold text-[#1d3557] mb-1" for="name">Username:</label>
          <input class="border rounded-md bg-white px-3 py-2 mb-6" type="text" id="name" name="name" required>
    
          <label class="text-sm font-bold text-[#1d3557] mb-1" for="password">Password:</label>
          <input class="border rounded-md bg-white px-3 py-2 mb-6" type="password" id="password" name="password" required>

          <label class="text-sm font-bold text-gray-600 mb-1" for="confirm_password">Confirm Password:</label>
          <input class="border rounded-md bg-white px-3 py-2 mb-4" type="password" id="confirm_password" name="confirm_password" required>
  
    
          <button  class="w-full bg-[#1d3557] text-white rounded-md p-2" type="submit">Sign Up</button>
        </form>
        <div class="relative pb-2">
          <div class="absolute top-0 left-0 w-full border-b"></div>
          <div class="absolute -top-3 left-0 w-full text-center">
            <span class="bg-[#f1faee] px-3 text-sm">New here?</span>
          </div>
        </div>
        <div>
          <button class="w-full bg-gray-200 text-gray-700 rounded-md p-2"><a href="/login">Login</a></button>
        </div>
        </div>
      </div>
    </main>
    <h1 class="absolute top-0 right-0 pl-4 mt-4 mr-4 text-xl font-bold text-[#1d3557]"><a  href="/admin/login">Admin?</a></h1>

  {{end}}
